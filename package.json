{
  "name": "primarylendingplatform",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "size-contracts": "hardhat size-contracts",
    "forkmainnet": "hardhat node --fork https://mainnet.infura.io/v3/\"$(cat .env | grep -Eo 'INFURA_KEY=.*' | grep -Eo '\\w+' | tail -1)\"",
    "forkrinkeby": "hardhat node --fork https://rinkeby.infura.io/v3/\"$(cat .env | grep -Eo 'INFURA_KEY=.*' | grep -Eo '\\w+' | tail -1)\"",
    "localDeploy": "hardhat run --network hardhat scripts/deployment/deployToRinkeby.js",
    "localDeployPriceOracle": "hardhat run --network hardhat scripts/deployment/rinkeby/priceOracleDeployment/deployPriceOracle.js",
    "docgen": "npx hardhat docgen",
    "dodoc": "npx hardhat dodoc",
    "upgradeBlendingToken_rinkeby": "hardhat run --network rinkeby scripts/upgrade/proxyUpgrade/bLendingToken/upgradeBUSDC.js",
    "upgradeBondtroller_rinkeby": "hardhat run --network rinkeby scripts/upgrade/proxyUpgrade/bondtroller/upgradeBondtroller.js",
    "upgradeJumpRateModel_rinkeby": "hardhat run --network rinkeby scripts/upgrade/proxyUpgrade/jumpRateModel/upgradeJumpRateModel.js",
    "upgradePrimaryIndexToken_rinkeby": "hardhat run --network rinkeby scripts/upgrade/proxyUpgrade/primaryIndexToken/upgradePrimaryIndexToken.js",
    "upgradeChainlinkProvider_rinkeby": "hardhat run --network rinkeby scripts/upgrade/proxyUpgrade/priceOracle/chainlinkProvider/upgradeChainlinkProvider.js",
    "upgradeUniswapV2Provider_rinkeby": "hardhat run --network rinkeby scripts/upgrade/proxyUpgrade/priceOracle/uniswapV2Provider/upgradeUniV2Provider.js",
    "upgradePriceProvider_rinkeby": "hardhat run --network rinkeby scripts/upgrade/proxyUpgrade/priceOracle/upgradePriceProviderAggregator.js",
    "upgradeBackendPriceProvider_rinkeby": "hardhat run --network rinkeby scripts/upgrade/proxyUpgrade/priceOracle/backendProvider/upgradeBackendProvider.js",

    "upgradeBlendingToken": "hardhat run --network mainnet scripts/upgrade/proxyUpgrade/bLendingToken/upgradeBUSDC.js",
    "upgradeBondtroller": "hardhat run --network mainnet scripts/upgrade/proxyUpgrade/bondtroller/upgradeBondtroller.js",
    "upgradeJumpRateModel": "hardhat run --network mainnet scripts/upgrade/proxyUpgrade/jumpRateModel/upgradeJumpRateModel.js",
    "upgradePrimaryIndexToken": "hardhat run --network mainnet scripts/upgrade/proxyUpgrade/primaryIndexToken/upgradePrimaryIndexToken.js",
    "upgradeChainlinkProvider": "hardhat run --network mainnet scripts/upgrade/proxyUpgrade/priceOracle/chainlinkProvider/upgradeChainlinkProvider.js",
    "upgradeUniswapV2Provider": "hardhat run --network mainnet scripts/upgrade/proxyUpgrade/priceOracle/uniswapV2Provider/upgradeUniV2Provider.js",
    "upgradePriceProvider": "hardhat run --network mainnet scripts/upgrade/proxyUpgrade/priceOracle/upgradePriceProviderAggregator.js",
    "upgradeBackendPriceProvider": "hardhat run --network mainnet scripts/upgrade/proxyUpgrade/priceOracle/backendProvider/upgradeBackendProvider.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@chainlink/contracts": "^0.2.2",
    "@openzeppelin/contracts": "^4.4.0",
    "@openzeppelin/contracts-upgradeable": "^4.4.0",
    "@primitivefi/hardhat-dodoc": "^0.2.3",
    "hardhat": "^2.7.0",
    "hardhat-contract-sizer": "^2.4.0",
    "js-big-decimal": "^1.3.4",
    "solidity-docgen": "^0.6.0-beta.10"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^2.1.3",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "chai": "^4.2.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat-gas-reporter": "^1.0.4",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.16"
  }
}
